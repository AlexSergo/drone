<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:minWidth="400dp"
    android:minHeight="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.AndroidIdFragment">

    <TextView
        android:layout_gravity="center"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Мои данные"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:id="@+id/androidIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Мой ID: "
            android:textColor="@color/black"
            android:textSize="18sp" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/androidId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="qwertytdg445gfgduio"
        android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:id="@+id/divisionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Позывной: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/divisionEditText"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"
            android:id="@+id/secretKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ключ шифрования: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:layout_gravity="center"
            android:id="@+id/secretKeyEditText"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_marginEnd="8dp"
        android:layout_gravity="center"
        android:id="@+id/passwordChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_change"
        android:textColor="@color/purple_500"
        android:textSize="16sp" />
</LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_height="wrap_content"
            android:text="сохранить" />

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Передать ID" />

    </LinearLayout>

</LinearLayout>